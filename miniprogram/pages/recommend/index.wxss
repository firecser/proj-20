.recommend-list {
  padding: 16px;
  background-color: #f5f5f7; /* 浅灰色背景 */
}

.recommend-item {
  border: 1px solid #e0e0e0;
  border-radius: 12px; /* 圆角 */
  padding: 16px;
  margin-bottom: 16px;
  background-color: #ffffff; /* 白色背景 */
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); /* 柔和阴影 */
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.recommend-item:active {
  transform: scale(0.98);
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
}

.index {
  font-size: 16px;
  font-weight: 600;
  color: #1d1d1f; /* 深灰色 */
  margin-bottom: 8px;
}

.category, 
.shop-name, 
.recommend-reason, 
.recommend-item, 
.comment {
  font-size: 14px;
  color: #6e6e73; /* 中灰色 */
  margin-bottom: 8px;
  line-height: 1.5;
}

.shop-name {
  font-weight: 500;
  color: #1d1d1f;
}

.recommend-reason {
  color: #1d1d1f;
  font-weight: 400;
}

.comment {
  padding-top: 8px;
  border-top: 1px solid #f0f0f0;
  margin-top: 16px; /* 增加顶部间距 */
}

.recommend-item .recommend-item-title {
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 4px;
}

.recommend-item .recommend-item-content {
  /* 使用苹果风格的颜色 */
  color: #FF3B30; 
  margin-bottom: 8px;
  padding: 8px;
  /* 背景色采用淡蓝色，与文字颜色形成对比且具有苹果风格 */
  background-color: #E5F6FF; 
  border-radius: 8px;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  border-radius: 8px;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
}